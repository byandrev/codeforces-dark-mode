{
  "manifest_version": 3,
  "name": "Codeforces Dark Mode",
  "version": "0.1.0",
  "author": "byandrev",
  "description": "Dark mode for Codeforces",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://codeforces.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "192": "/assets/android-chrome-192x192.png",
    "512": "/assets/android-chrome-512x512.png"
  }
}
